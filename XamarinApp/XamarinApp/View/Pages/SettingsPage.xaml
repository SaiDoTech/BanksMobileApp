<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinApp.View.Pages"
             x:Class="XamarinApp.View.Pages.SettingsPage">
    <ContentPage.Content>
        <StackLayout Padding="10,8,10,10">

            <Picker x:Name="settingsPicker"
                    BindingContext="{x:Static local:SettingsPage.fontController}"
                    FontFamily="{Binding Path=CurrentFont}"
                    FontSize="Title"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"
                    HorizontalOptions="FillAndExpand">
                <Picker.Items>
                    <x:String>Settings</x:String>
                </Picker.Items>
            </Picker>

            <Label x:Name="interfaceLabel"
                   BindingContext="{x:Static local:SettingsPage.fontController}"
                   FontFamily="{Binding Path=CurrentFont}"
                   FontSize="Medium" 
                   Text="Interface:"/>

            <Frame x:Name="interfaceFrame"
                   Padding="7,3,7,3">
                <StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label x:Name="langLabel"
                            BindingContext="{x:Static local:SettingsPage.fontController}"
                            FontFamily="{Binding Path=CurrentFont}"
                            Text="Language:" 
                            FontSize="Medium" 
                            VerticalTextAlignment="Center" />
                        <Picker x:Name="langPicker"
                            BindingContext="{x:Static local:SettingsPage.fontController}"
                            FontFamily="{Binding Path=CurrentFont}"
                            HorizontalOptions="FillAndExpand"
                            SelectedIndexChanged="langPicker_SelectedIndexChanged"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label x:Name="fontLabel"
                            BindingContext="{x:Static local:SettingsPage.fontController}"
                            FontFamily="{Binding Path=CurrentFont}"
                            Text="Font:"
                            FontSize="Medium" 
                            VerticalTextAlignment="Center" />
                        <Picker x:Name="fontPicker"
                            BindingContext="{x:Static local:SettingsPage.fontController}"
                            FontFamily="{Binding Path=CurrentFont}"
                            HorizontalOptions="FillAndExpand"
                            SelectedIndexChanged="fontPicker_SelectedIndexChanged"/>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label x:Name="themeLabel"
                            BindingContext="{x:Static local:SettingsPage.fontController}"
                            FontFamily="{Binding Path=CurrentFont}"
                            Text="Theme:"
                            FontSize="Medium"
                            VerticalTextAlignment="Center" />
                        <Picker x:Name="themePicker"
                            BindingContext="{x:Static local:SettingsPage.fontController}"
                            FontFamily="{Binding Path=CurrentFont}"
                            HorizontalOptions="FillAndExpand"/>
                    </StackLayout>

                </StackLayout>
            </Frame>

            <Label x:Name="appLabel"
                   BindingContext="{x:Static local:SettingsPage.fontController}"
                   FontFamily="{Binding Path=CurrentFont}"
                   FontSize="Medium" 
                   Text="App:"/>

            <Frame x:Name="appFrame"
                   Padding="7,3,7,3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="0.5*"/>
                    </Grid.ColumnDefinitions>

                    <StackLayout Orientation="Horizontal"
                                 Grid.Row="0"
                                 Grid.Column="0">
                        <Label x:Name="decimalLabel" 
                                BindingContext="{x:Static local:SettingsPage.fontController}"
                                FontFamily="{Binding Path=CurrentFont}"
                                Text="Decimal places:"
                                FontSize="Medium"
                                VerticalTextAlignment="Center" />
                        <Label x:Name="signLabel"
                                BindingContext="{x:Static local:SettingsPage.fontController}"
                                FontFamily="{Binding Path=CurrentFont}"
                                Text="Decimal places:"
                                FontSize="Medium"
                                VerticalTextAlignment="Center" />
                    </StackLayout>

                    <Stepper x:Name="decimalStepper"
                             HorizontalOptions="End"
                             Grid.Row="0"
                             Grid.Column="1"
                             Minimum="0" 
                             Maximum="4" 
                             Increment="1" 
                             Value="2"
                             ValueChanged="Stepper_ValueChanged"/>
                </Grid>
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>