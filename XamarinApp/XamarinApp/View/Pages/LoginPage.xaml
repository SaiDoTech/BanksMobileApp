<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinApp.Extensions"
             x:Class="XamarinApp.View.Pages.LoginPage">
    <ContentPage.Content>
        
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="{local:ImageResource XamarinApp.View.Images.BankAppLogo.png}" />

            <Entry x:Name="loginEntry"
                   WidthRequest="220"
                   HorizontalOptions="Center"
                   Margin="20, 10, 20, 0"/>
            <Entry x:Name="keyEntry"
                   WidthRequest="220"
                   IsPassword="True"
                   HorizontalOptions="Center"
                   Margin="20, 5, 20, 0"/>
            <Button x:Name="loginButton"
                    WidthRequest="220"
                    HorizontalOptions="Center"
                    Margin="20, 5, 20, 0"
                    Clicked="OnLogButtonClicked"/>
            <Label x:Name="registryLabel"
                   HorizontalOptions="Center"
                   Margin="0, 5, 0, 0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>